@model IEnumerable<EvolucionaMovil.Models.ProspectoVM>
@{
    
   // ViewBag.Title = "Index";
    ViewBag.Title = "Prospectos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Javascript{

    <script src="@Url.Content("~/Scripts/Prospectos.js")" type="text/javascript"></script>
    @if (User.IsInRole("Administrator")){
        <script type="text/javascript">
            var Actions = { links: '<a class="linkElimina" onclick="MostrarConfirmacion({ProspectoId},\'Eliminar\')">Eliminar<a/>', colwidth: '80px' }
        </script>
    }
}
<h1>Prospectos</h1>

<p>
    @Html.ActionLink("Nuevo Registro", "Preafiliacion")
</p>
<form action="/Prospectos" method="post">

<div id="filtros">
    <div class="fr">
        <label>Nombre/e-main</label>
        <input type="text" class="small" id="nombre" />
        <label> Ingreso del </label>
        <input type="text" class="small" id="fechaInicio" />
        <label> al </label>
        <input class="small" type="text" id="fechaFin" />
        <input type="submit" id="Actualizar" class="freshbutton-blue small" value="Actualizar" />
    </div>
 <div class="fl">
        Ver
        <input type="text" id="pageSize" class="small" />
        registros
</div>
</div>
<div id="grdProspectos" />
<div id="Confirmacion" title="Prospectos"><p id="MensajeConfirmacion"></p></div>
<div id="Mensaje"><p id="MensajeAccion"></p></div>
</form>
