@model EvolucionaMovil.Models.PaqueteVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset class="noInFieldLabel">
        <legend>Paquete @Model.PaqueteId</legend>        
        
        <div class="editor-label">
            <label for="Creditos">Eventos</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Creditos)
            @Html.ValidationMessageFor(model => model.Creditos)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Precio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Precio)
            @Html.ValidationMessageFor(model => model.Precio)
        </div>
       @Html.HiddenFor(model => model.PaqueteId)
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
