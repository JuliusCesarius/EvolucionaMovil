@model IEnumerable<EvolucionaMovil.Models.PaqueteVM>

@{
    ViewBag.Title = "Index";
}

<h1>Configuración de Paquetes</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Paquete
        </th>
        <th>
            Eventos
        </th>
        <th>
            Precio Evento
        </th>
        <th>
            Precio Paquete
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PaqueteId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creditos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioPorEvento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioString)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PaqueteId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PaqueteId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PaqueteId })
        </td>
    </tr>
}

</table>
