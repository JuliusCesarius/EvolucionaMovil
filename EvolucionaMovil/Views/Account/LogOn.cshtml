@model EvolucionaMovil.Models.LogOnModel

@{
    ViewBag.Title = "Acceder";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "El usuario o contraseña no son correctos. Por favor, intente de nuevo.")

@using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "formRight" }))
{
    <div>
        <fieldset>
            <legend>Iniciar Sesión</legend>

            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "Nombre de usuario" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                <a href="/Users/PasswordRecovery">He olvidado mi nombre de usuario o contraseña</a>
            </div>
            <div class="editor-field">
            <br />
                <input type="submit" class="freshbutton-blue" value="Acceder" />
            </div>
        </fieldset>
    </div>
}
<div class="formRight">
<div class="loginAdvise">
<h2>¿Aún no estás dado de alta?</h2>
<h4>Te invitamos a que te <a href="../Prospectos/Preafiliacion">Preafilies AQUÍ</a> o que conozcas nuestra plataforma mediante nuestro usuario demo:</h4>
<h3 >Usuario: <strong class="fwb">demo</strong></h3><br />
<h3>Password: <strong class="fwb">passworddemo</strong></h3>
</div>
</div>
