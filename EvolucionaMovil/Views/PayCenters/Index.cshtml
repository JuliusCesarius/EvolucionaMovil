@model IEnumerable<EvolucionaMovil.Models.PayCenterVM>
@section Javascript{
    @if (User.IsInRole("Administrator")){
    <script type="text/javascript">
        var Actions = { links: '<a href="/PayCenters/Edit/{PayCenterId}">Editar<a/> | <a href="/PayCenters/Details/{PayCenterId}">Detalles<a/> | <a class="linkActiva" id="Accion{PayCenterId}">{Activo}<a/> | <a class="linkElimina" onclick="MostrarConfirmacion({PayCenterId},\'Eliminar\')">Eliminar<a/>', colwidth: '200px' }
    </script>
    }
    else
    {
    <script type="text/javascript">
        var Actions = { links: '<a href="/PayCenters/Edit/{PayCenterId}">Editar<a/> | <a href="/PayCenters/Details/{PayCenterId}">Detalles<a/> | <a class="linkActiva" id="Accion{PayCenterId}">{Activo}<a/>', colwidth: '150px' }
    </script>
    }
    <script src="@Url.Content("~/Scripts/PayCenters.js")" type="text/javascript"></script>
}

@{
    ViewBag.Title = "PayCenters";
}

<p class="fr newPaycenter">
    @Html.ActionLink("Nuevo Paycenter", "Registrar", null, new { @class = "freshbutton-blue small" })
</p>
<h1>PayCenters</h1>
<div id="filtros">
    <div class="fr">
        <label>Nombre </label>
        <input type="text" class="small" id="nombre" />
        <label> Ingreso del </label>
        <input type="text" class="small" id="fechaInicio" />
        <label> al </label>
        <input class="small" type="text" id="fechaFin" />
        <input type="submit" id="Actualizar" class="freshbutton-blue small" value="Actualizar" />
    </div>
    <div class="fl">
        Ver
        <input type="text" id="pageSize" class="small" />
        registros
        <input type="radio" id="Todos" name="Estatus" value="Todos" checked="checked" /><label id="lblTodos" for="Todos">Todos</label>
        <input type="radio" id="Activos" name="Estatus" value="Activo" /><label id="lblActivos" for="Activos">Activos</label>
        <input type="radio" id="Inactivos" name="Estatus" value="Inactivo" /><label id="lblInactivos" for="Inactivos">Inactivos</label>
    </div>
</div>
<div id="grdPaycenters" />
<div id="Confirmacion" title="PayCenter"><p id="MensajeConfirmacion"></p></div>
<div id="Mensaje"><p id="MensajeAccion"></p></div>
