@model EvolucionaMovil.Models.PayCenterVM
@{
    ViewBag.Title = "Información del PayCenter";
}

<h1 class="tituloPaycenter">@Model.Nombre</h1>

<fieldset>
    <legend></legend>

    <div class="formLeft">
        <div class="infoPaycenter">
            <h2>Información General</h2>
            @Html.ActionLink("[Editar]", "Edit", new { id = Model.PayCenterId })
        </div>

        <div class="display-label labelPaycenter">Empresa o Negocio</div>
        <div class="display-field displayPaycenter">
            @Html.DisplayFor(model => model.Nombre)
        </div>

        <div class="display-label labelPaycenter">Nombre del Representante</div>
        <div class="display-field displayPaycenter">
            @Html.DisplayFor(model => model.Representante)
        </div>

        <div class="display-label labelPaycenter">Teléfono</div>
        <div class="display-field displayPaycenter">
            @Html.DisplayFor(model => model.Telefono)
        </div>

        <div class="display-label labelPaycenter">Celular</div>
        <div class="display-field displayPaycenter">
            @Html.DisplayFor(model => model.Celular)
        </div>

        <div class="display-label labelPaycenter">Email</div>
        <div class="display-field displayPaycenter">
            @Html.DisplayFor(model => model.Email)
        </div>

        <div class="display-label labelPaycenter">Email2</div>
        <div class="display-field displayPaycenter">
            @Html.DisplayFor(model => model.Email2)
        </div>

        <div class="display-label labelPaycenter">Domicilio</div>
        <div class="display-field displayPaycenter">
            @Html.DisplayFor(model => model.Domicilio)
        </div>

        <div class="display-label labelPaycenter">Código Postal</div>
        <div class="display-field displayPaycenter">
            @Html.DisplayFor(model => model.CP)
        </div>

        <div class="display-label labelPaycenter">FechaIngreso</div>
        <div class="display-field displayPaycenter">
            @Html.DisplayFor(model => model.FechaIngreso)
        </div>

        <div class="display-label labelPaycenter">IFE</div>
        <div class="display-field">
            <a href="@Model.IFE">Ver imagen</a>
        </div>

        <div class="display-label labelPaycenter">Comprobante Dom.</div>
        <div class="display-field">
            <a href="@Model.Comprobante">Ver imagen</a>
        </div>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
